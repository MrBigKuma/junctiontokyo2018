<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.batteryteam.dropboxofthings.StoreActivity">

    <TextView
        android:id="@+id/txtEthWallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/text_margin"
        android:text="ETH wallet: 0.19 ETH" />

    <fragment
        android:id="@+id/framentStoreItem"
        android:name="io.batteryteam.dropboxofthings.StoreItemFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/txtEthWallet" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/fab_margin"
        app:srcCompat="@drawable/ic_add" />
</RelativeLayout>
